{
  "manifest_version": 3,

  "name": "Obsidian Web",
  "description": "Connect your browser with your notes in Obsidian",
  "version": "1.0",

  "options_page": "options.html",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  },

  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png",
      "256": "icon256.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs", "activeTab", "scripting"],

  "host_permissions": ["https://127.0.0.1:27124/*"]
}
