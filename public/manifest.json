{
  "manifest_version": 3,

  "name": "Obsidian Web",
  "description": "Connect your browser with your notes in Obsidian",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs", "activeTab"],

  "host_permissions": ["https://127.0.0.1:27124/*"]
}
